/* pages/userAccount/useraccount.wxss */


.column-title {
  background-color: #fff;
  text-align: center;
  padding: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.column-wrapper {
  margin-bottom: 30rpx;
}

.master-info {
  border-top: 1rpx solid #efefef;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
}

.master-info image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.master-brief {
  height: 120rpx;
  padding-left: 40rpx;
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  align-items: flex-start;
}

.master-user {
  font-size: 30rpx;
  letter-spacing: 1px;
}

.master-intro {
  color: #888;
  width: 300rpx;
  font-size: 24rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.master-fans {
  color: #888;
  font-size: 20rpx;
}

.master-follow {
  color: #ddd;
  width: 100rpx;
  padding: 10rpx;
  border-radius: 50rpx;
  background-color: #999;
  text-align: center;
  font-size: 24rpx;
}
/* 评价 */

.c_btn .to_comment{
  float: right;
  color: #888;
  font-size: 26rpx;
  letter-spacing: 8rpx;
  
}
.c_btn{
  /* font-size: 26rpx; */
  margin-bottom: 15px;
  color: #888;
}
.container {
  padding-bottom: 45px;
}
.comments {
  margin-top: 5px;
}

.content {
  word-break: break-all;
  font-size: 28rpx;
  
}

.item {
  display: flex;
  position: relative;
  padding: 15px;
  background-color: #fff;
  margin-bottom: 1px;
  border-radius: 5%;
}

.i-right {
  width: 100%;
}

.c-u-img {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-right: 8px;
}

.item .top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 3px;
}

.item .u-name {
  color:#888;
  font-size: 28rpx;
}

.item .time {
  color: #888;
  font-size:28rpx;
}

.comment-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  /* background-color: #fff */
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
  z-index: 100;
}

/* 评价 */
.c_wrapper{
  padding: 20rpx;
  background-color: rgb(238, 238, 238);
  margin: 30rpx;
  color: #aaa;
  border-radius: 5%;
}