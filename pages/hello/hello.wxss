/* pages/hello/hello.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #FFCC00;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #FFCC00;
}

.clear{
  clear: both;
  overflow: hidden;
}
navigator{
  display:inline;
}

.list{
  margin-top:10px;
}
 
.list .list_item{
  margin-top:10px;
  padding:10px;
  height:60px;
  border-bottom:1px solid #E8E8E8;
}
.list .list_item .img{
  float:left;
  width:18%;
  height:100%;
}
.list .list_item .img image{
   width:100%;
   height:100%;
}
 
.list .list_item .info{
  width:59%;
  float:left;
  height:80px;
  position:relative;
}
.list .list_item .info .name{
  color:#333;
  margin-left:10px;
  font-size: 15px;
}

 
.list .list_item .info .desc{
  color:#747474;
  font-size: 15px;
  margin-left:10px;
}

.list .list_item .info .price{
  color:#FF2727;
  font-size:15px;
}


